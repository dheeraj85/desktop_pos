{
  "name": "anukool-pos",
  "version": "1.0.1",
  "description": "Anukool POS",
  "main": "main.js",
  "author": "CICS",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis"
  },
  "build": {
    "appId": "com.anukool.pos",
    "productName": "Anukool POS",
    "asar": false,                       
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",                      
      "electron/**/*",                 
      "dist/**/*",                     
      "data/**/*",
      "package.json",
      "!**/*.map",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": ["nsis"],                
      "icon": "build/anukool_logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false
    },
    "artifactName": "AnukoolPOS-${version}-Setup.${ext}"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}
